{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true
  },
 "plugins": [ "svelte3"],
  "overrides": [ // this stays the same
    {
      "files": ["*.svelte"],
      "processor": "svelte3/svelte3"
    }
  ],
  "settings": {
    "svelte3/typescript": true // load TypeScript as peer dependency
  },
  "rules": {
    "no-unused-vars": "error"
  }
}
